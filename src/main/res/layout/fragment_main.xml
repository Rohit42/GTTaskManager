<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.compscitutorials.basigarcia.navigationdrawervideotutorial.MainFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/numberPickerLayout">

        <NumberPicker
            android:id="@+id/hoursScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <NumberPicker
            android:id="@+id/minutesScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:text = "Schedule"
        android:id="@+id/scheduleButton"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:background="@drawable/button_rounded"

        android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/numberPickerLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </android.support.v4.view.ViewPager>



</LinearLayout>
